<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:style="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/test"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ph_profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/blank_profile_picture_973460_960_720"
        android:layout_gravity="center"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="0dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#FFFFFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ph_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kashaf Ahmed"
            android:textColor="@color/accent"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ph_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sultanpur"
                android:textColor="@color/iron"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_marginStart="12dp"
                />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ph_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exp : 5 yrs"
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                />
            <TextView
                android:id="@+id/ph_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating : 5/5"
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_marginEnd="12dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/ph_know_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/border"
                android:textColor="@color/accent"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                />
        </LinearLayout>
          </LinearLayout>
</androidx.cardview.widget.CardView>